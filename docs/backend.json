{
  "entities": {
    "Lead": {
      "title": "Lead",
      "description": "Represents a potential customer lead.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "address": { "type": "string" },
        "locationPin": { "type": "string" },
        "selectedPlan": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "email", "phone", "address", "selectedPlan", "createdAt"]
    },
    "Offer": {
      "title": "Offer",
      "description": "Represents an internet plan offer.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "price": { "type": "string" },
        "speed": { "type": "string" },
        "features": { "type": "array", "items": { "type": "string" } },
        "promo": { "type": "string" },
        "image": {
          "type": "object",
          "properties": {
            "imageUrl": { "type": "string" },
            "imageHint": { "type": "string" },
            "description": { "type": "string" }
          }
        }
      },
      "required": ["id", "title", "price", "speed", "features"]
    },
     "OfferTV": {
      "title": "OfferTV",
      "description": "Represents an internet + TV plan offer.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "price": { "type": "string" },
        "speed": { "type": "string" },
        "features": { "type": "array", "items": { "type": "string" } },
        "promo": { "type": "string" },
        "image": {
          "type": "object",
          "properties": {
            "imageUrl": { "type": "string" },
            "imageHint": { "type": "string" },
            "description": { "type": "string" }
          }
        },
        "channels": { "type": "string" },
        "stb": { "type": "string" }
      },
      "required": ["id", "title", "price", "speed", "features", "channels", "stb"]
    },
    "AddOn": {
        "title": "AddOn",
        "description": "Represents an add-on product or service.",
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "category": { "type": "string", "enum": ["perangkat", "tv", "smart-home", "speed-booster"] },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "price": { "type": "string" },
          "oldPrice": { "type": "string" },
          "discount": { "type": "string" },
          "features": { "type": "array", "items": { "type": "string" } },
          "notes": { "type": "string" }
        },
        "required": ["id", "category", "title", "price"]
    },
    "CarouselSlide": {
      "title": "CarouselSlide",
      "description": "Represents a slide in the hero carousel.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "image": {
          "type": "object",
          "properties": {
            "imageUrl": { "type": "string" },
            "imageHint": { "type": "string" },
            "description": { "type": "string" }
          }
        }
      },
      "required": ["id", "title", "description", "image"]
    },
    "Article": {
      "title": "Article",
      "description": "Represents a blog article.",
      "type": "object",
      "properties": {
        "slug": { "type": "string" },
        "title": { "type": "string" },
        "summary": { "type": "string" },
        "content": { "type": "string" },
        "publishedAt": { "type": "string", "format": "date-time" },
        "category": { "type": "string" },
        "image": {
          "type": "object",
          "properties": {
            "imageUrl": { "type": "string" },
            "imageHint": { "type": "string" },
            "description": { "type": "string" }
          }
        }
      },
      "required": ["slug", "title", "summary", "content", "publishedAt", "category", "image"]
    },
    "Review": {
      "title": "Review",
      "description": "Represents a customer review or feedback.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "review": { "type": "string" },
        "rating": { "type": "number", "minimum": 1, "maximum": 5 },
        "createdAt": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"], "default": "pending" }
      },
      "required": ["name", "review", "rating", "createdAt", "status"]
    },
    "Admin": {
      "title": "Admin",
      "description": "Represents an administrator user.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "The user's Firebase Authentication UID." },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["superadmin", "editor"], "description": "The role of the admin." },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "email", "role", "createdAt"]
    }
  },
  "auth": {
    "providers": ["email-password"]
  },
  "firestore": {
    "/leads/{leadId}": {
      "schema": { "$ref": "#/entities/Lead" },
      "description": "Collection of customer leads."
    },
    "/offers/{offerId}": {
      "schema": { "$ref": "#/entities/Offer" },
      "description": "Collection of internet plan offers."
    },
     "/offersTV/{offerTVId}": {
      "schema": { "$ref": "#/entities/OfferTV" },
      "description": "Collection of internet + TV plan offers."
    },
    "/addOns/{addOnId}": {
      "schema": { "$ref": "#/entities/AddOn" },
      "description": "Collection of add-on products and services."
    },
    "/carouselSlides/{carouselSlideId}": {
      "schema": { "$ref": "#/entities/CarouselSlide" },
      "description": "Collection of slides for the hero carousel."
    },
    "/articles/{articleId}": {
      "schema": { "$ref": "#/entities/Article" },
      "description": "Collection of blog articles."
    },
    "/reviews/{reviewId}": {
      "schema": { "$ref": "#/entities/Review" },
      "description": "Collection of customer reviews."
    },
    "/admins/{adminId}": {
      "schema": { "$ref": "#/entities/Admin" },
      "description": "Collection of administrator users. The document ID should be the user's UID."
    }
  }
}
